{
  "compilerOptions": {
    "target": "ESNext",                        
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "allowJs": true,                         
    "skipLibCheck": true,                    
    "strict": true,                            
    "forceConsistentCasingInFileNames": true, 
    "noEmit": true,                          
    "incremental": true,                      
    "module": "ESNext",                       
    "moduleResolution": "Node",               
    "esModuleInterop": true,                  
    "resolveJsonModule": true,               
    "isolatedModules": true,                    
    "jsx": "react-jsx"                         
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
